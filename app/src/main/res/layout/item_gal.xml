<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_bg">
    <ImageView
        android:id="@+id/img_pic"
        android:scaleType="centerCrop"
        android:layout_margin="3dp"
        android:layout_width="160dp"
        android:layout_height="240dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_del"
                android:scaleType="centerCrop"
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:layout_gravity="end"
                android:background="@drawable/view_bg"
                android:src="@drawable/deletered"
                android:layout_height="25dp" />
        </LinearLayout>
      <TextView
            android:id="@+id/tv_noOfTimes"
            android:layout_width="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:text="1"
            android:layout_height="wrap_content" />
  <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/llt_col">
    </LinearLayout>
    <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:text="1"
            android:layout_height="wrap_content" />
        <RatingBar
            android:id="@+id/ratingBar_gal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:numStars="5"
            android:isIndicator="true"
            android:stepSize="0.5"
            android:rating="2.0"
            android:progressDrawable="@drawable/rating_bar_gold"/>
        <TextView
            android:id="@+id/tv_availablity"
            android:layout_width="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/colorPrimary"
            android:text="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_lastWorn"
            android:layout_width="wrap_content"
            android:text="123"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:text="-"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>